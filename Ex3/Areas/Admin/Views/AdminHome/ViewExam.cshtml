
@{
    ViewBag.Title = "ViewExam";
    Layout = "~/Areas/Admin/Views/Shared/AdminPage.cshtml";
}

<link rel="stylesheet" href="~/Content/Adminx.css" media="all" />
<style>
    .CourseView {
        width: 150%;
        overflow-x: scroll;
    }
    table {
        width:100%;
    }
</style>
<div class="container-fluid CourseView">
    <div class="row ">
        <input class="srcbar" type="text" value="" id="myInput" onkeyup="myFunction()" placeholder="Search" />
        <section>
            <!--for demo wrap-->
            <div class="tbl-header">
                <table cellpadding="0" cellspacing="0" border="0">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Answer A</th>
                            <th>Answer B</th>
                            <th>Answer C</th>
                            <th>Answer D</th>
                            <th>Answer Correct</th>
                            <th>Course</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tbl-content">
                <table cellpadding="0" cellspacing="0" border="0">
                    <tbody id="myTable">
                        @foreach (var item in ViewBag.listexam)
                        {
                            <tr>
                                <td>@item.question</td>
                                <td> @item.answerA </td>
                                <td>@item.answerB</td>
                                <td>@item.answerC</td>
                                <td>@item.answerD</td>
                                <td>@item.answercorrect</td>
                                <td>@item.course</td>
                                <td>
                                <a class="btn-edit" href="@Url.Action("EditExam",new { idexam=@item.ID })"><i style="font-size:30px" class='bx bxs-message-square-edit'></i></a>
                                <a class="btn-edit" href="@Url.Action("Removeexam",new { idexam=@item.ID })"><i style="font-size:30px" class='bx bxs-message-square-x'></i></a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

