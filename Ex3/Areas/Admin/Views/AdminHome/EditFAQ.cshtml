
@{
    ViewBag.Title = "EditFAQ";
    Layout = "~/Areas/Admin/Views/Shared/AdminPage.cshtml";
}

<link rel="stylesheet" href="~/Content/Adminx.css" media="all" />
<style>
    .Course-cv {
        height: 880px;
        overflow-y: scroll;
    }
</style>
<div class="container-fluid ">
    <div class="row Course-cv">
        <div class="col left-input">
            <div class="container Exam-cv">
                @foreach (var item in ViewBag.listfaq)
                {
                    <form method="post" action="@Url.Action("Updatefaq")">
                        <input type="hidden" value="@item.ID" name="idfaq" />
                        <input type="text" required name="question" value="@item.question" placeholder="Question " />
                        <br />
                        <br />
                        <textarea name="content">@item.answer
                        </textarea>
                        <br />
                        <br />

                        <button type="submit">UPDATE</button>
                    </form>
                }

            </div>

        </div>

    </div>
</div>
<script>
    CKEDITOR.replace('content',{
        heigth: 800 + 'px',
        width:100 + '%'
    });
</script>


