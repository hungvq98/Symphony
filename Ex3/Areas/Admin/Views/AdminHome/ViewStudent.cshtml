
@{
    ViewBag.Title = "ViewStudent";
    Layout = "~/Areas/Admin/Views/Shared/AdminPage.cshtml";
}

<link rel="stylesheet" href="~/Content/Adminx.css" media="all" />
<style>
    .CourseView {
        width: 150%;
        overflow-x: scroll;
    }
    table {
        width:100%;
    }
</style>
<div class="container-fluid CourseView">
    <div class="row ">
        <input class="srcbar" type="text" value="" id="myInput" onkeyup="myFunction()" placeholder="Search" />
        <section>
            <!--for demo wrap-->
            <div class="tbl-header">
                <table cellpadding="0" cellspacing="0" border="0">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>EMail</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Register Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tbl-content">
                <table cellpadding="0" cellspacing="0" border="0">
                    <tbody id="myTable">
                        @foreach (var item in ViewBag.liststudent)
                        {
                            <tr>
                                <td>@item.fullname</td>
                                <td>@item.age</td>
                                <td>@item.gender</td>
                                <td>@item.email</td>
                                <td>@item.phone</td>
                                <td>@item.address</td>
                                <td>@item.regisdate</td>
                                <td>
                                <a class="btn-edit" href="@Url.Action("EditStudent",new {iduser=@item.ID })"><i style="font-size:30px" class='bx bxs-message-square-edit'></i></a>
                                <a class="btn-edit" href="@Url.Action("Removestudent",new {iduser=@item.ID })"><i style="font-size:30px" class='bx bxs-message-square-x'></i></a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

