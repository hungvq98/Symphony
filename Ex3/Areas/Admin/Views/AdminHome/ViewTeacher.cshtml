
@{
    ViewBag.Title = "ViewTeacher";
    Layout = "~/Areas/Admin/Views/Shared/AdminPage.cshtml";
}

<link rel="stylesheet" href="~/Content/Adminx.css" media="all" />
<style>
    .CourseView {
        width: 150%;
        overflow-x: scroll;
    }
    .popup-his {
        width:600px;
        height:500px;
        background-color:white;
        box-shadow:0px 0px 10px rgba(0,0,0,0.5);
        position:absolute;
        top:20%;
        right:20%;
        padding:20px;
        font-weight:bold;
        border-radius:5px;
        display:block;
        position:fixed;
    }
    .popup-his button {
        background:none;
        border:none;
        cursor:pointer;
        position:absolute;
        top:5px;
        right:5px;
    }
    .popup-his button i {
        font-weight:bold;
        font-size:20px;
    }
    .his-box {
        position:relative;
    }
    .his-box .profile {
        margin-top:30px;
    }
    .img-teacher {
        height:200px;
        width:200px;
    }
    .history-in {
        width:100%;
        height:420px;
        overflow:hidden;
        overflow-y:scroll;
    }
    .img{
        width:200px;
        height:auto;
    }
    table {
        width:100%;
    }
</style>
<div class="container-fluid CourseView">
    <div class="popup-his container-fluid">
        <div class="his-box">
            <div class="row">
                <button class="btn-close"><i class='bx bx-x '></i></button>
            </div>
            <div class="row profile">
                <div class="col">
                    @foreach(var items in ViewBag.listtea)
                    {
                    <div class="img-teacher">
                        Img
                        <img class="img" src="~/Upload/imgteacher/@items.img" />
                    </div>
                   
                    <br />
                    <div>Name : @items.fullname</div>
                    <br />
                    <div>Job : @items.professtional</div>
                    <br />
                    <div>Age : @items.age</div>
                    <br />
                    }
                  
                </div>
                <div class="col history-in">
                    <div></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row ">
        <input class="srcbar" type="text" value="" id="myInput" onkeyup="myFunction()" placeholder="Search" />
        <section>
            <!--for demo wrap-->
            <div class="tbl-header">
                <table cellpadding="0" cellspacing="0" border="0">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>History</th>
                            <th>Phone</th>
                            <th>Birthday</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tbl-content">
                <table cellpadding="0" cellspacing="0" border="0">
                    <tbody id="myTable">
                        @foreach (var item in ViewBag.listtea)
                        {
                            <tr>
                                <td>@item.fullname</td>
                                <td>@item.age</td>
                                <td>@item.gender</td>
                                <td>@item.email</td>
                                <td><a href="#" class="btn-detail" style="text-decoration:none;color:#000000">Detail</a></td>
                                <td>@item.phone</td>
                                <td>@item.birthday</td>
                                <td>
                                    <img class="img" src="~/Upload/imgteacher/@item.img" />
                                </td>
                                <td>
                                <a class="btn-edit" href="@Url.Action("EditTeacher",new { idtea=@item.ID})"><i style="font-size:30px" class='bx bxs-message-square-edit'></i></a>
                                <a class="btn-edit" href="@Url.Action("Removeteacher",new { idtea=@item.ID})"><i style="font-size:30px" class='bx bxs-message-square-x'></i></a></td>
                            </tr>
                                        }

                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
    $('.btn-detail').click(function () {
        var pop = $('.popup-his');
        pop.css("display", "block");
    });
    $('.btn-close').click(function () {
        var pop = $('.popup-his');
        pop.css("display", "none");
    });
</script>


