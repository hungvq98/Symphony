
@{
    ViewBag.Title = "Type";
    Layout = "~/Areas/Admin/Views/Shared/AdminPage.cshtml";
}

<style>
    .Course-cv {
        height:880px;
        overflow-y: scroll;
    }
    table  {
        width:100%;
    }
    .tbl-content {
        height:500px;
    }
    
</style>
<div class="container-fluid ">
    <div class="row Course-cv">
        <div class="col left-input">
            <div class="container Exam-cv">
                <form action="@Url.Action("Addtype")" method="post">
                    <input type="text" required name="type" value="" placeholder="Type " />
                    <br />
                    <br />
                    <button type="submit">ADD</button>
                </form>
                    <br />
                    <input class="srcbar" type="text" value="" id="myInput" onkeyup="myFunction()" placeholder="Search" />
                    <section>
                        <!--for demo wrap-->
                        <div class="tbl-header">
                            <table cellpadding="0" cellspacing="0" border="0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>ACtion</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="tbl-content">
                            <table cellpadding="0" cellspacing="0" border="0">
                                <tbody id="myTable">
                                    @foreach (var item in ViewBag.listtype)
                                    {
                                        <tr>
                                            <td>@item.name</td>
                                            <td>
                                                <a class="btn-edit" href="@Url.Action("Removetype",new {idtype=@item.ID })"><i style="font-size:30px" class='bx bxs-message-square-x'></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>
              
            </div>

        </div>

    </div>
</div>
<script>
    CKEDITOR.replace('editor1',{
        heigth: 700,
        width:100 + '%'
    });
</script>


