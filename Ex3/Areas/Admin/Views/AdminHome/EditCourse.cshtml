
@{
    ViewBag.Title = "EditCourse";
    Layout = "~/Areas/Admin/Views/Shared/AdminPage.cshtml";
}

<link rel="stylesheet" href="~/Content/Adminx.css" media="all" />
<style>
    .Course-cv {
        height: 880px;
        overflow-y: scroll;
    }
    .texter {
        color: #eeba10;
    }
</style>
<div class="container-fluid">
    <div class="row Course-cv">
        <div class="col left-input">
            <div class="container">
                @foreach (var item in ViewBag.listcourse)
                {
                <form method="post" action="@Url.Action("Updatecourse")" enctype="multipart/form-data">
                    <input type="hidden" value="@item.ID" name="idcourse" />
                    <br />
                    <input type="text" required name="namecourse" value="@item.name" placeholder="Name " />
                    <br />
                    <input type="text" required name="price" value="@item.price" placeholder="Price " />
                    <br />
                    <input type="text" required name="time" value="@item.time" placeholder="Time " />
                    <br />
                    <input type="text" required name="material" value="@item.material" placeholder="Material" />
                    <div class="texter">Start:</div>
                    <input type="date" required name="start" value="@item.startime" placeholder="Startime" />
                    <div class="texter">End:</div>
                    <input type="date" required name="end" value="@item.endtime" placeholder="Endtime" />
                    <select name="teacher">
                        <option disabled required selected hidden>Select Teacher</option>
                        @foreach (var items in ViewBag.listtea)
                        {
                            if (items.fullname == item.teacher)
                            {
                                <option selected>@items.fullname</option>
                            }
                            else
                            {
                                <option>@items.fullname</option>
                            }
                        }

                    </select>
                    <select name="grade">
                        <option disabled required selected hidden>Select Grade</option>
                        @if (item.grade == "Primarys school")
                        {
                            <option selected>Primarys school</option>
                            <option>Junior high school</option>
                            <option>High school</option>
                            <option>University</option>
                        }
                        @if (item.grade == "Junior high school")
                        {
                            <option>Primarys school</option>
                            <option selected>Junior high school</option>
                            <option>High school</option>
                            <option>University</option>
                        }
                        @if (item.grade == "High school")
                        {
                            <option>Primarys school</option>
                            <option>Junior high school</option>
                            <option selected>High school</option>
                            <option>University</option>
                        }
                        @if (item.grade == "University")
                        {
                            <option>Primarys school</option>
                            <option>Junior high school</option>
                            <option>High school</option>
                            <option selected>University</option>
                        }

                    </select>
                    <select name="type">
                        <option disabled required selected hidden>Select Type</option>
                        @if (item.type == "New")
                        {
                            <option selected>New</option>
                            <option>Popular</option>
                        }
                        @if (item.type == "Popular")
                        {
                            <option>New</option>
                            <option selected>Popular</option>
                        }

                    </select>
                    <br />
                    <img id="output" class="img" src="~/Upload/imgcourse/@item.img" />
                    <p><input type="file" accept="image/*" name="myimg" id="myimg" onchange="loadFile(event)" style="display: none;"></p>
                    <p><label for="myimg" style="cursor: pointer; border:1px solid #eeba10; background-color:#eeba10;width:150px;height:40px;padding:9px;font-weight:bold;">Upload Image<i style="font-size:18px;margin-left:5px;" class='bx bx-upload'></i></label></p>
                    <textarea class="Content" name="content" id="content" placeholder="Content">@item.content
                </textarea>
                    <br />
                    <button type="submit">UPDATE</button>
                </form>
                }



            </div>

        </div>


    </div>
</div>
<script>
    CKEDITOR.replace('content',{
        heigth: 700,
        width:100 + '%'
    });
</script>

