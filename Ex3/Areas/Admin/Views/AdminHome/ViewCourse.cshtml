
@{
    ViewBag.Title = "ViewCourse";
    Layout = "~/Areas/Admin/Views/Shared/AdminPage.cshtml";
}
<link rel="stylesheet" href="~/Content/Adminx.css" media="all" />
<style>
    .CourseView {
        width:150%;
        overflow-x: scroll;
    }
    .imgcourse{
        width:50px;
        height:auto;
    }
    table {
        width:100%;
    }
</style>
<div class="container-fluid CourseView">
    <div class="row ">
        <input class="srcbar" type="text" value="" id="myInput" onkeyup="myFunction()" placeholder="Search" />
        <section>
            <!--for demo wrap-->
            <div class="tbl-header">
                <table cellpadding="0" cellspacing="0" border="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Content</th>
                            <th>Price</th>
                            <th>Grade</th>
                            <th width="270">Img</th>
                            <th>Time</th>
                            <th>Material</th>
                            <th>Teacher</th>
                            <th>Type</th>
                            <th>Starttime</th>
                            <th>Endtime</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tbl-content">
                <table cellpadding="0" cellspacing="0" border="0">
                    <tbody id="myTable">
                        @foreach (var item in ViewBag.listcourse)
                        {
                            <tr>
                                <td>@item.name</td>
                                <td><b> Edit to view</b></td>
                                <td>@item.price</td>
                                <td>@item.grade</td>
                                <td width="270">
                                    <img src="~/Upload/imgcourse/@item.img" class="imgcourse" />
                                </td>
                                <td>@item.time</td>
                                <td>@item.material</td>
                                <td>@item.teacher</td>
                                <td>@item.type</td>
                                <td>@item.startime</td>
                                <td>@item.endtime</td>                             
                                <td>
                                    <a class="btn-edit" href="@Url.Action("EditCourse",new { idcourse=@item.ID})"><i style="font-size:30px" class='bx bxs-message-square-edit'></i></a>
                                    <a class="btn-edit" href="@Url.Action("Removecourse",new { idcourse=@item.ID})"><i style="font-size:30px" class='bx bxs-message-square-x'></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>


