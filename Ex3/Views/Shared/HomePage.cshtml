        TweenMax.to('.book5', 15, { rotation: 360, ease: Power0.easeNone, repeat: -1 });

        // scroll to animate img
        $(Document).ready(function () {
            $(window).scroll(function () {
                $('.slideup').each(function () {
                    var x = $(this).offset().top;
                    var y = $(window).scrollTop();
                    if (x < y + 550) {
                        $(this).addClass("slide");
                    }
                });
            });
        })

        $(".items").slice(0, 3).show();
        $(".LoadMore").on("click", function () {
            $(".items:hidden").slice(0, 3).show();
            if ($(".items:hidden").length == 0) {
                $(".LoadMore").fadeOut();
            }
        });
        $(".items2").slice(0, 3).show();
        $(".LoadMore2").on("click", function () {
            $(".items2:hidden").slice(0, 3).show();
            if ($(".items2:hidden").length == 0) {
                $(".LoadMore2").fadeOut();
            }
        });
        $(".items3").slice(0, 3).show();
        $(".LoadMore3").on("click", function () {
            $(".items3:hidden").slice(0, 3).show();
            if ($(".items3:hidden").length == 0) {
                $(".LoadMore3").fadeOut();
            }
        });

       
        /*header scroll*/
        window.onscroll = function sc() {
            if (scrollY > 700) {
                $(".header").css({ "background-color": "white" });
            }
            else {
                $(".header").css({ "background-color": "rgba(255,255,255,0.3)" });
            }

        }
        $('.ToTop').click(function () {
            $('html,body').animate({ scrollTop: 0 }, 800);
        });





        function clicktoinmenu() {
            var dropmenu = document.getElementById('menudrop');
            dropmenu.style.marginRight = '500px';
        }

        function clicktooutmenu() {
            var dropmenu2 = document.getElementById('menudrop');
            dropmenu2.style.marginRight = '-520px';
        }
    </script>
