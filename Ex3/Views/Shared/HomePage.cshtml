<body>
    <style>
        body {
            overflow-x: hidden;
        }

        .container-fluid {
            padding: 0;
            margin: 0;
        }

        .menudrop2 li a {
            text-decoration: none;
            color: #808080;
            transition: 0.5s;
        }

        .menudrop2 li:hover > a {
            color: white;
        }
        .menudrop2 li a:hover > .bxs-bell {
            color: white;
        }

        .menudrop li a {
            text-decoration: none;
            color: #808080;
            transition: 0.5s;
        }

        .menudrop li:hover > a {
            color: white;
        }
        .menudrop li a:hover > .bxs-bell {
            color: white;
        }
        .ToTop {
            width: 40px;
            height: 40px;
            background-color: #eeba10;
            position: absolute;
            right: 2%;
            bottom: 5%;
            position: fixed;
            z-index: 99;
            border: none;
            outline: none;
            cursor: pointer;
            color: white;
            font-weight: bolder;
            opacity: 0.8;
        }
        @*drop*@
        .dropbtn {
            background-color: none;
            color: white;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

        .dropdown-bs {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            left:0;
        }

        .dropdown-content a {
            color: black;
            text-decoration: none;
            display: block;
            font-size:14px;
        }

        .dropdown-content a:hover {
            background-color: #808080;
            color:azure;
        }

        .dropdown-bs:hover .dropdown-content {
            display: block;
        }

        .dropdown-bs:hover .dropbtn {
            background-color: none;
        }
        @*drop bell*@
        .dropbtn-bell {
            background-color: none;
            color: white;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

        .dropdown-bs-bell {
            position: relative;
            display: inline-block;
        }

        .dropdown-content-bell {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            left: 0;
            overflow:hidden;
            overflow-y:auto
        }

        .dropdown-content-bell a {
            color: black;
            text-decoration: none;
            display: block;
            font-size: 14px;
        }

        .dropdown-content-bell a:hover {
            background-color: #808080;
            color: azure;
        }

        .dropdown-bs-bell:hover .dropdown-content-bell {
            left:-362px;
            display: block;
            width:400px;
            height:600px;
        }

        .dropdown-bs-bell:hover .dropbtn-bell {
            background-color: none;
        }
     
    </style>
    <button class="ToTop">TOP</button>
    <div class="header" id="header">
        <div class="heading" id="heading">
            <div class="logo">
                <img src="~/Upload/logo/LogoSL.png" alt="">
            </div>
            <div class="loginbtn">
                @if (@Session["login"] != null)
                {
                <div>@Session["login"]</div>
                }
                else
                {
                    <div>LOGIN</div>
                }

            </div>
        </div>
        <div class="title-cv" id="title-cv">
            <span class="title">Welcome to <br> Symphony Limited</span>
            <br>
            <span class="subtitle">The Best place for learning</span>
        </div>
        <div class="menubar2">
            <div class="logo2">
                <img src="~/Upload/logo/LogoSL.png" alt="">
            </div>
            <ul class="menudrop2">
                <li><a href="@Url.Action("Index")">home</a></li>
                <li><a href="@Url.Action("AboutUs")">about</a></li>
                <li><a href="@Url.Action("FAQ")">faq</a></li>
                <li><a href="@Url.Action("Forum")">Forum</a></li>
                <li class="dropdown-bs">
                    @if (@Session["login"] != null)
                    {
                        <a class="dropbtn" href="@Url.Action("LoginNRegister")">@Session["login"]</a>
                        <div class="dropdown-content">
                            <a href="#">Account Setting</a>
                            <a href="#">Log Out</a>
                        </div>
                    }
                    else
                    {
                        <a href="@Url.Action("LoginNRegister")">login</a>
                    }
                </li>
                @if (Session["login"] != null)
                {
                    <li class="dropdown-bs-bell">
                        <a class="dropbtn-bell" href="#"><i class='bx bxs-bell' style='color:#808080;font-size:18px;'></i></a>
                        <div class="dropdown-content-bell">
                            @*vong lap thong bao*@
