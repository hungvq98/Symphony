    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajaxy/1.6.1/scripts/jquery.ajaxy.min.js" integrity="sha512-bztGAvCE/3+a1Oh0gUro7BHukf6v7zpzrAb3ReWAVrt+bVNNphcl2tDTKCBr5zk7iEDmQ2Bv401fX3jeVXGIcA==" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Content/stylestars.css">
</head>
<body>
    <style>
        body {
            overflow-x: hidden;
        }

        .container-fluid {
            padding: 0;
            margin: 0;
        }

        .menudrop2 li a {
            text-decoration: none;
            color: #808080;
            transition: 0.5s;
        }

        .menudrop2 li:hover > a {
            color: white;
        }

        .menudrop li a {
            text-decoration: none;
            color: #808080;
            transition: 0.5s;
        }

        .menudrop li:hover > a {
            color: white;
        }
        .ToTop {
            width: 40px;
            height: 40px;
            background-color: #eeba10;
            position: absolute;
            right: 2%;
            bottom: 5%;
            position: fixed;
            z-index: 99;
            border: none;
            outline: none;
            cursor: pointer;
            color: white;
            font-weight: bolder;
            opacity: 0.8;
        }
    </style>
    <button class="ToTop">TOP</button>
    <div class="header" id="header">
        <div class="heading" id="heading">
            <div class="logo">
                <img src="~/Upload/logo/LogoSL.png" alt="">
            </div>
            <div class="loginbtn">
                <div>LOGIN</div>
            </div>
        </div>
        <div class="title-cv" id="title-cv">
            <span class="title">Welcome to <br> Symphony Limited</span>
            <br>
            <span class="subtitle">The Best place for learning</span>
        </div>
        <div class="menubar2">
            <div class="logo2">
                <img src="~/Upload/logo/LogoSL.png" alt="">
            </div>
            <ul class="menudrop2">
                <li><a href="@Url.Action("Index")">home</a></li>
                <li><a href="@Url.Action("AboutUs")">about</a></li>
                <li><a href="@Url.Action("FAQ")">faq</a></li>
                <li><a href="@Url.Action("Exame")">exame</a></li>
                <li><a href="@Url.Action("LoginNRegister")">login</a></li>
            </ul>
        </div>
    </div>
    <div class="menubar">
        <button onclick="clicktoinmenu()"><img src="~/Upload/icon/menuicon.png" alt=""></button>
        <ul class="menudrop" id="menudrop">
            <button onclick="clicktooutmenu()"><img src="~/Upload/icon/xicon.png" width="50" alt="Alternate Text" /></button>

            <li><a href="@Url.Action("Index")">home</a></li>
            <li><a href="@Url.Action("AboutUs")">about</a></li>
            <li><a href="@Url.Action("FAQ")">faq</a></li>
            <li><a href="@Url.Action("Exame")">exame</a></li>
            <li><a href="@Url.Action("LoginNRegister")">login</a></li>
        </ul>
    </div>
    <div>
        @RenderBody()
    </div>
    <br />
    <br />
    <div class="container-fluid footers">
        <div class="row">
            <div class="footer1 col">
                <ul>
                    <li class="head-li">Menu</li>
                    <br />
                    <li>Home</li>
                    <li>About</li>
                    <li>Contact</li>
                    <li>Exame</li>
                    <li>Courses</li>
                </ul>
            </div>
            <div class="footer1 col">
                <ul>
                    <li class="head-li">Usefull Links</li>
                    <br>
                    <li>Test IQ</li>
                    <li>FAQ</li>
                    <li>Community</li>
                    <li>Campus Picture</li>
                    <li>Benefits</li>
                </ul>
            </div>
            <div class="footer1 col">

                <ul>
                    <li class="head-li">Contact</li>
                    <br>
                    <li>facebook.com/helloworld</li>
                    <li>+84 98899889</li>
                    <li>helloworld@gmail.com</li>
                    <li>Aptech Education, Q1, TP.HCM</li>
                    <li>Aptech Education, Q3, TP.HCM</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="copyright">Copyright 2021 - D e s i g n b y Q u h u</div>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script>
        TweenMax.to('.circle-container', 15, { rotation: 360, ease: Power0.easeNone, repeat: -1 });
        TweenMax.to('.circle-container2', 60, { rotation: 360, ease: Power0.easeNone, repeat: -1 });
        TweenMax.to('.circle-container3', 30, { rotation: 360, ease: Power0.easeNone, repeat: -1 });
        TweenMax.to('.circle-container4', 50, { rotation: 360, ease: Power0.easeNone, repeat: -1 });
        TweenMax.to('.book', 25, { rotation: 360, ease: Power0.easeNone, repeat: -1 });
        TweenMax.to('.book2', 5, { rotation: 360, ease: Power0.easeNone, repeat: -1 });
        TweenMax.to('.book3', 10, { rotation: 360, ease: Power0.easeNone, repeat: -1 });
        TweenMax.to('.book4', 20, { rotation: 360, ease: Power0.easeNone, repeat: -1 });
        TweenMax.to('.book5', 15, { rotation: 360, ease: Power0.easeNone, repeat: -1 });

        // scroll to animate img
        $(Document).ready(function () {
            $(window).scroll(function () {
                $('.slideup').each(function () {
                    var x = $(this).offset().top;
                    var y = $(window).scrollTop();
                    if (x < y + 550) {
                        $(this).addClass("slide");
                    }
                });
            });
        })

        $(".items").slice(0, 3).show();
        $(".LoadMore").on("click", function () {
            $(".items:hidden").slice(0, 3).show();
            if ($(".items:hidden").length == 0) {
                $(".LoadMore").fadeOut();
            }
        });
        $(".items2").slice(0, 3).show();
        $(".LoadMore2").on("click", function () {
            $(".items2:hidden").slice(0, 3).show();
            if ($(".items2:hidden").length == 0) {
                $(".LoadMore2").fadeOut();
            }
        });
        /*header scroll*/
        window.onscroll = function sc() {
            if (scrollY > 700) {
                $(".header").css({ "background-color": "white" });
            }
            else {
                $(".header").css({ "background-color": "rgba(255,255,255,0.3)" });
            }

        }
        $('.ToTop').click(function () {
            $('html,body').animate({ scrollTop: 0 }, 800);
        });





        function clicktoinmenu() {
            var dropmenu = document.getElementById('menudrop');
            dropmenu.style.marginRight = '500px';
        }

        function clicktooutmenu() {
            var dropmenu2 = document.getElementById('menudrop');
            dropmenu2.style.marginRight = '-520px';
        }
    </script>
</body>

</html>
