
@{
    ViewBag.Title = "LoginNRegister";
    Layout = "~/Views/Shared/LoginPage.cshtml";

    if (TempData["message"] != null)
    {
        <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["message"])));
        </script>
    }
}
<link rel="stylesheet" href="~/Content/Loginsss.css" media="all" />
<div class="Login-cv">

    <div class="login-form">
        <form  action="@Url.Action("Login")" method="post">
            <input class="text" type="text" value="" id="usrname" placeholder="Username" name="username" required />
            <input class="text" type="password" id="pwd" placeholder="Password" name="password" required />
            @*<div class="btn-login-cv"><a href="#">Login</a></div>*@
            <div class="btn-login-cv"><input type="submit" class="btn-login" value="Login " /></div>
        </form>
    </div>
    <div class="regis-form2" id="regis-form2">
        <a class="homebtn" href="@Url.Action("Index")"><i class='bx bx-left-arrow-alt'></i></a>
        <form action="@Url.Action("Register")" method="post">
            <input class="text" type="text" value="" placeholder="Full Name" name="fullname" required />
            <input class="text" type="email" value="" placeholder="Email" name="email" required />
            <input class="text" type="text" value="" placeholder="Phone" name="phone" required />
            <input class="text" type="text" value="" placeholder="Age" name="age" required />
            <select name="gender" class="text" required>
                <option disabled hidden selected>Gender</option>
                <option>Male</option>
                <option>Female</option>
            </select>
            <input class="text" type="text" value="" placeholder="Address" name="address" required />
            <input class="text" type="text" value="" placeholder="Username" name="user" required />
            <input class="text" type="password" value="" placeholder="Password" name="pass" required />
            <input class="text" type="password" value="" placeholder="Confirm Password" name="pass2" required />
            @*<div class="btn-login-cv"><a href="#">Register</a></div>*@
            <div class="btn-login-cv">
                <input type="submit"  class="btn-login" value="Sign Up" />              
            </div>
        </form>
    </div>
    <div class="pictures" id="pictures"><img id="pictures-inside" width="500" src="~/Upload/PNG/undraw_professor.png" alt="Alternate Text" /></div>
    <div class="regis-form" id="regis-form">
